# Database
DATABASE_URL='postgresql://user:password@host:5432/database'

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Abacus AI API
ABACUSAI_API_KEY=your-abacusai-api-key

# AWS S3 Storage
AWS_PROFILE=hosted_storage
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER_PREFIX=your-folder-prefix/

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key

# Brave Search API (for website analysis)
BRAVE_API_KEY=your-brave-api-key

# Resend (for email sending)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
# RESEND_FROM_EMAIL=you@yourdomain.com  # Optional

# Google OAuth (for Gmail integration - optional alternative)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
